<!DOCTYPE html>
<html>
  <head>
    <title>NewEmrHms</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet"/>
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
  </head>

  <body>
    <% if current_page?(root_path) %>
      <%= render 'shared/header' %>
    <% end %>

    <% if !current_page?(root_path) && user_signed_in? %>
      <!-- Mobile top bar with toggle -->
      <nav class="navbar navbar-light bg-light d-md-none">
        <div class="container-fluid">
          <span class="navbar-brand ms-2">EMR-HMS</span>
          <button class="btn" type="button" data-bs-toggle="offcanvas" data-bs-target="#mobileSidebar" aria-controls="mobileSidebar">
            <i class="bi bi-list fs-5"></i>
          </button>
        </div>
      </nav>

      <!-- Offcanvas for mobile sidebar -->
      <div class="offcanvas offcanvas-start" tabindex="-1" id="mobileSidebar" aria-labelledby="mobileSidebarLabel">
        <div class="offcanvas-header">
          <h5 class="offcanvas-title" id="mobileSidebarLabel">Menu</h5>
          <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body p-0">
          <%= render 'shared/sidebar' %>
        </div>
      </div>
    <% end %>

    <% if !current_page?(root_path) && user_signed_in? %>
      <!-- Dashboard layout -->
      <div class="app-layout d-flex">
        <!-- Desktop Sidebar -->
        <aside class="sidebar d-none d-md-block">
          <%= render 'shared/sidebar' %>
        </aside>

        <main class="main-content flex-grow-1">
          <div class="container-fluid">
            <%= yield %>
          </div>
        </main>
      </div>
    <% else %>
      <!-- Auth & other full-width pages -->
      <main class="auth-layout">
        <%= yield %>
      </main>
    <% end %>
  </body>
</html>

<style>
  body {
    font-family: "Roboto", sans-serif;
  }
</style>