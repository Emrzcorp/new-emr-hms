<%= form_with model: @appointment, local: true do |f| %>
  <div class="row mb-3">
    <div class="col-md-6">
      <%= f.label :patient_id, "Select Patient", class: "form-label" %>
      <%= f.collection_select :patient_id, @patients, :id, :full_name, { prompt: "Choose a patient" }, class: "form-select" %>
    </div>
    <div class="col-md-6">
    	<%= f.label :appointment_type, class: "form-label" %>
      <%= f.select :appointment_type, ["Consultation", "Follow-up", "Routine Checkup"], {prompt: 'Select Type'}, class: "form-select" %>
    	<%#= f.label :new_patient_name, "Or Enter New Patient Name", class: "form-label" %>
    	<%#= f.text_field :new_patient_name, class: "form-control", placeholder: "Enter New Patient Name" %>
    </div>
  </div>

  <div class="row mb-3">
	 <div class="col-md-6">
      <%= f.label :date, class: "form-label" %>
      <%= f.date_field :date, class: "form-control" %>
    </div>
    <div class="col-md-6">
      <%= f.label :time, class: "form-label" %>
      <%= f.time_field :time, class: "form-control" %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-md-6">
      <%= f.label :duration, class: "form-label" %>
      <%= f.select :duration, ["15 minutes", "30 minutes", "45 minutes", "1 hour", "1.5 hours", "2 hours" ], {prompt: 'Select duration'}, class: "form-select", placeholder: "Minutes" %>
    </div>
    <div class="col-md-6">
      <%#= f.label :appointment_type, class: "form-label" %>
      <%#= f.select :appointment_type, ["Consultation", "Follow-up", "Routine Checkup"], {prompt: 'Select Type'}, class: "form-select" %>
      <%= f.label :priority, class: "form-label" %>
    	<%= f.select :priority, ["Low", "Normal", "High", "Urgent"], {}, class: "form-select" %>
    </div>
  </div>

  <%# <div class="col-md-6 mb-3"> %>
    <%#= f.label :priority, class: "form-label" %>
    <%#= f.select :priority, ["Low", "Normal", "High", "Urgent"], {}, class: "form-select" %>
  <%# </div> %>

  <div class="mb-3">
    <%= f.label :reason_for_visit, class: "form-label" %>
    <%= f.text_area :reason_for_visit, class: "form-control", rows: 2, placeholder: 'e.g., Annual checkup, Follow-up for hypertension' %>
  </div>

  <div class="mb-3">
  	<%= f.label :additional_notes, class: "form-label" %>
    <%= f.text_area :additional_notes, class: "form-control", rows: 2, placeholder: 'Any addtional notes or special instructiions' %>
  </div>

  <div class="row g-1 d-flex justify-content-end">
	  <div class="col-12 col-md-3 col-lg-2">
	    <%= link_to "<- Back", appointments_path, class: 'btn btn-outline-secondary mt-1 w-100 w-md-auto' %>
	  </div>

	  <div class="col-12 col-md-3 col-lg-2">
	    <%= f.submit "Schedule", class: "btn btn-primary mt-1 w-100 w-md-auto" %>
	  </div>
  </div>
<% end %>
