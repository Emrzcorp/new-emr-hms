<div>
	<%= form_with(model: @patient, local: true) do |f| %>

		<h5>Personal Information</h5>
	  <div class="form-group row">
	    <div class="col-md-6">
	      <%= f.label :first_name %>
	      <%= f.text_field :first_name, class: "form-control", required: true, placeholder: 'Enter First Name' %>
	    </div>
	    <div class="col-md-6">
	      <%= f.label :last_name %>
	      <%= f.text_field :last_name, class: "form-control", required: true, placeholder: 'Enter Last Name' %>
	    </div>
	  </div>

	  <h5 class="mt-3">Contact Information</h5>
	  <div class="form-group row mt-2">
	    <div class="col-md-6">
	      <%= f.label :date_of_birth %>
	      <%= f.date_field :date_of_birth, class: "form-control", required: true, placeholder: 'Enter Date of Birth Name' %>
	    </div>
	    <div class="col-md-6">
	      <%= f.label :gender %>
	      <%= f.select :gender, ["Male", "Female", "Other"], { prompt: "Select Gender" }, class: "form-control" %>
	    </div>
	  </div>

	  <div class="form-group row mt-2">
	    <div class="col-md-6">
	      <%= f.label :phone_number %>
	      <%= f.text_field :phone_number, class: "form-control", required: true, placeholder: 'Enter Phone Number' %>
	    </div>
	    <div class="col-md-6">
	      <%= f.label :email_address %>
	      <%= f.email_field :email_address, class: "form-control", required: true, placeholder: 'Enter Email Address' %>
	    </div>
	  </div>

	  <div class="form-group row mt-2">
	    <div class="col-md-6">
	      <%= f.label :address1, "Address Line 1" %>
	      <%= f.text_field :address1, class: "form-control", required: true, placeholder: 'Enter Address 1' %>
	    </div>
	    <div class="col-md-6">
	      <%= f.label :address2, "Address Line 2" %>
	      <%= f.text_field :address2, class: "form-control", required: true, placeholder: 'Enter Address 2' %>
	    </div>
	  </div>

	  <div class="form-group row mt-2">
	    <div class="col-md-6">
	      <%= f.label :city %>
	      <%= f.text_field :city, class: "form-control", required: true, placeholder: 'Enter City' %>
	    </div>
	    <div class="col-md-6">
	      <%= f.label :state %>
	      <%= f.text_field :state, class: "form-control", required: true, placeholder: 'Enter State' %>
	    </div>
	  </div>

	  <div class="form-group row mt-2">
	    <div class="col-md-6">
	      <%= f.label :country %>
	      <%= f.text_field :country, class: "form-control", required: true, placeholder: 'Enter Country' %>
	    </div>
	  	<div class="col-md-6">
		    <%= f.label :zip_code %>
		    <%= f.text_field :zip_code, class: "form-control", required: true, placeholder: 'Enter Zip Code' %>
	  	</div>
	  </div>

	  <h5 class="mt-3">Emergency Contact</h5>
	  <div class="form-group row">
	    <div class="col-md-6">
	      <%= f.label :emergency_contact_person_name, "Contact Person" %>
	      <%= f.text_field :emergency_contact_person_name, class: "form-control", required: true, placeholder: 'Enter Emergency Contact Person Name' %>
	    </div>
	    <div class="col-md-6">
	      <%= f.label :emergency_contact_number, "Contact Number" %>
	      <%= f.text_field :emergency_contact_number, class: "form-control", required: true, placeholder: 'Enter Emergency Contact Number' %>
	    </div>
	  </div>

	  <div class="mt-4">
	    <%= f.submit class: "btn btn-primary mt-2 mb-2" %>
	    <%= link_to "Cancel", patients_path, class: "btn btn-secondary mt-2 mb-2" %>
	  </div>
	<% end %>

</div>