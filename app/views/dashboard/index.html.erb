<div class="mt-3">
	<div class="row mb-3">
		<div class="col-lg-9">
			<h2>Welcome back <%= current_user.full_name if user_signed_in? %></h2>
		</div>
		<div class="col-lg-3">
			<%= link_to 'javascript:void(0)', class: 'btn btn-light mb-2' do %>
				<i class="fa-solid fa-calendar me-2"></i> Schedule
			<% end %>

			<%= link_to 'javascript:void(0)', class: 'btn btn-primary mb-2' do %>
				<i class="fa-solid fa-users me-2"></i> New Patients
			<% end %>
		</div>
	</div>
	<div class="row g-3">
		<div class="col-lg-3">
			<div class="card shadow-sm rounded-3">
				<div class="card-body">
					<h5>Total Patients</h5>
				</div>
			</div>
		</div>

		<div class="col-lg-3">
			<div class="card shadow-sm rounded-3">
				<div class="card-body">
					<h5>Today's Appointments</h5>
				</div>
			</div>
		</div>

		<div class="col-lg-3">
			<div class="card shadow-sm rounded-3">
				<div class="card-body">
					<h5>Pending Tests</h5>
				</div>
			</div>
		</div>

		<div class="col-lg-3">
			<div class="card shadow-sm rounded-3">
				<div class="card-body">
					<h5>Critical Alerts</h5>
				</div>
			</div>
		</div>
	</div>
</div>
